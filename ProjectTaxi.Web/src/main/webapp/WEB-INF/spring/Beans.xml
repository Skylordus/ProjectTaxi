<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd"
       >

    <context:annotation-config/>
    <context:component-scan base-package="com.yberdaliyev"/>

    <bean class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"
          name="passwordEncoder"/>


    <!--RMI-->
    <bean class="org.springframework.security.remoting.rmi.ContextPropagatingRemoteInvocationFactory">
    </bean>
    <!--RMI SERVICE CLIENTS-->
    <bean id="userServiceClient"
          class="org.springframework.remoting.rmi.RmiProxyFactoryBean">
        <property name="serviceUrl" value="rmi://localhost:4012/"/>
        <property name="serviceInterface" value="com.yberdaliyev.services.IUserService"/>
    </bean>

</beans>